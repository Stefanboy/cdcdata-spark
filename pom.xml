        <module>cdcdata-presto</module>
        <module>cdcdata-flume</module>
        <module>cdcdata-spark-kudu</module>
    </modules>
    <repositories>
        <repository>
            <id>cloudera</id>
            <url>http://repository.cloudera.com/artifactory/cloudera-repos/</url>
        </repository>

    </repositories>
