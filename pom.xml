        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <scala.version>2.12.10</scala.version>
        <hadoop.version>2.6.0-cdh5.16.2</hadoop.version>
        <scala.tools.verson>2.12</scala.tools.verson>
        <spark.version>2.4.5</spark.version>
        <mysql.version>5.1.28</mysql.version>
        <scalikejdbc.version>2.5.2</scalikejdbc.version>
        <presto.version>0.233.1</presto.version>
        <flume.version>1.6.0-cdh5.16.2</flume.version>
        <kudu.version>1.7.0</kudu.version>
        <hbase.version>1.2.0-cdh5.16.2</hbase.version>
    </properties>
    <modules>
        <module>cdcdata-spark-core</module>
        <module>cdcdata-spark-sql</module>
        <module>cdcdata-spark-streaming</module>
        <module>cdcdata-spark-streaming-kafka</module>
        <module>cdcdata-spark-delta</module>
        <module>cdcdata-spark-hbase</module>
        <module>cdcdata-spark-utils</module>
        <module>cdcdata-hadoop</module>
